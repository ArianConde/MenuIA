    <script>
        // Configuración de EmailJS
        const SERVICE_ID = "YOUR_SERVICE_ID"; // Reemplaza con tu Service ID de EmailJS
        const TEMPLATE_ID = "YOUR_TEMPLATE_ID"; // Reemplaza con tu Template ID de EmailJS
        
        // Función para mostrar notificaciones
        function showToast(message, isSuccess = true) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.style.background = isSuccess ? 'var(--success)' : 'var(--primary)';
            toast.classList.add('show');
            
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }
        
        // Función para enviar correo
        function sendEmail(templateId, templateParams) {
            emailjs.send(SERVICE_ID, templateId, templateParams)
                .then(response => {
                    console.log('Correo enviado!', response.status, response.text);
                    showToast('¡Mensaje enviado con éxito! Te contactaremos pronto.');
                })
                .catch(error => {
                    console.error('Error al enviar el correo:', error);
                    showToast('Error al enviar el mensaje. Inténtalo de nuevo más tarde.', false);
                });
        }
        
        // Función para capturar leads
        function captureLead() {
            const email = document.getElementById('lead-email').value;
            if(email) {
                const templateParams = {
                    to_email: 'arianconde90@icloud.com',
                    from_email: email,
                    subject: 'Nuevo lead para análisis de menú',
                    message: `El usuario con email: ${email} ha solicitado un análisis gratuito de su menú.`
                };
                
                sendEmail(TEMPLATE_ID, templateParams);
            } else {
                showToast("Por favor ingresa tu email", false);
            }
        }
        
        // Función para solicitar demo
        function requestDemo() {
            const restaurant = document.getElementById('demo-restaurant').value;
            const email = document.getElementById('demo-email').value;
            
            if(restaurant && email) {
                const templateParams = {
                    to_email: 'arianconde90@icloud.com',
                    from_email: email,
                    subject: 'Solicitud de análisis para restaurante',
                    message: `El restaurante ${restaurant} (${email}) ha solicitado un análisis personalizado.`
                };
                
                sendEmail(TEMPLATE_ID, templateParams);
            } else {
                showToast("Por favor completa ambos campos", false);
            }
        }
        
        // Función para calcular ahorros en la demo
        function calculateSavings() {
            const revenue = parseInt(document.getElementById('monthly-revenue').value) || 15000;
            const savings = revenue * 0.23; // 23% de ahorro estimado
            
            document.getElementById('savings-amount').textContent = '$' + savings.toLocaleString('es') + '/mes';
            document.getElementById('dishes-count').textContent = Math.floor(revenue/3000) + ' platos';
            document.getElementById('profit-increase').textContent = '23%';
            document.getElementById('savings-bar').style.width = '70%';
            
            document.getElementById('results-box').style.display = 'block';
            
            // Scroll a resultados
            document.getElementById('results-box').scrollIntoView({behavior: 'smooth'});
        }
        
        // Manejar envío de formulario de contacto
        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const phone = document.getElementById('phone').value;
            const restaurant = document.getElementById('restaurant').value;
            const plan = document.getElementById('plan').value;
            const message = document.getElementById('message').value;
            
            const templateParams = {
                to_email: 'arianconde90@icloud.com',
                from_name: name,
                from_email: email,
                subject: 'Solicitud de análisis para ' + restaurant,
                message: `
                    Nombre: ${name}
                    Restaurante: ${restaurant}
                    Email: ${email}
                    Teléfono: ${phone || 'No proporcionado'}
                    Plan de interés: ${plan}
                    Mensaje: ${message || 'No proporcionado'}
                `
            };
            
            sendEmail(TEMPLATE_ID, templateParams);
            this.reset();
        });
        
        // Smooth scrolling para enlaces de navegación
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
        
        // Suscripción a newsletter
        function subscribeNewsletter() {
            const email = document.getElementById('footer-email').value;
            if(email) {
                const templateParams = {
                    to_email: 'arianconde90@icloud.com',
                    subject: 'Nueva suscripción al newsletter',
                    message: `El email ${email} se ha suscrito al newsletter de consejos para restaurantes.`
                };
                
                sendEmail(TEMPLATE_ID, templateParams);
                document.getElementById('footer-email').value = '';
            } else {
                showToast("Por favor ingresa tu email", false);
            }
        }
        
        // Animación para el plan premium
        document.addEventListener('DOMContentLoaded', function() {
            const premiumCard = document.querySelector('.pricing-card.popular');
            
            setInterval(() => {
                premiumCard.classList.toggle('pulse-animation');
            }, 5000);
            
            // Animar elementos al hacer scroll
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animated', 'fadeInUp');
                    }
                });
            }, { threshold: 0.1 });
            
            document.querySelectorAll('.animated').forEach(el => {
                observer.observe(el);
            });
        });
    </script>
</body>
</html>
